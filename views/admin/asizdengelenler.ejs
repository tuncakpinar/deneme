<%- contentFor('title') %>
Sizden Gelenler

<%- contentFor('body') %>
<section id="icerik" class="buyuk">
	<h4 class="well">SİZDEN GELENLER <p class="pull-right"> <a href="_yorumekle"><i class="fa fa-fw fa-plus"></i> Yeni Yorum</a></p></h4>
	
    <table id="datatable" class="table table-striped table-bordered">
    	<thead>
        	<tr>
            	<th class="gizli text-center">ID</th>
                <th><i class="fa fa-fw fa-puzzle-piece"></i> BAŞLIK</th>
                <th>METİN</th>
                <th class="gizli"><i class="fa fa-fw fa-clock-o"></i> TARİH</th>
            	<th class="gizli"><i class="fa fa-fw fa-user"></i> FİRMA</th>
                <th class="gizli"><i class="fa fa-fw fa-user"></i> ADSOYAD</th>
            	<th class="gizli"><i class="fa fa-fw fa-user"></i> ÜNVAN</th>
            </tr>
        </thead>
        <tbody>
            <% szdngln.forEach(function(item){ %>

        	<tr>
            	<td class="gizli text-center"><%= item.id %></td>
            	<td><a class="btn" href="_yorum-guncelle?id=<%= item.id %>" data-toggle="popover" data-placement="bottom" data-title="Giriş" data-content="<%= item.giris %>" data-trigger="hover" ><i class="fa fa-fw fa-puzzle-piece"></i> <b><%= item.baslik %></b></a>
                <p class="pull-right">
                	
                    <a class="text-info" title="Güncelle" href="_yorum-guncelle?id=<%= item.id %>"><i class="fa fa-fw fa-pencil"></i></a>
                    <a class="btn-ajax-confirm text-danger" frm="yorumSil" data-id="<%= item.id %>" title="Sil" style="cursor:pointer;"><i class="fa fa-fw fa-times"></i></a>
                    <a class="btn-ajax-confirm text-<%= item.onay ? 'danger' : 'success'%>" frm="yorumOnayla" data-id="<%= item.id %>" title="<%= item.onay ? 'Onay Kaldır' : 'Onayla'%>" style="cursor:pointer;"><i class="fa fa-<%= item.onay ? 'circle-o' : 'check'%>"></i></a>
                    
                    
                </p>
                
                </td>
                <td class="gizli"><%= item.metin %></td>
                <td class="gizli"><%= item.tarih %></td>
                <td class="gizli"><%= item.firma %></td>
                <td class="gizli"><%= item.adsoyad %></td>
                <td class="gizli"><%= item.unvan %></td>

            	
            </tr>
            <% }); %>        
        </tbody>
    </table>

</section>
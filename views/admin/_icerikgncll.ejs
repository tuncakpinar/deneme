<%- contentFor('title') %>
YAZI GÜNCELLE
<%- contentFor('body') %>

<section id="icerik" class="buyuk">
        
    <h4 class="well">
        YAZI GÜNCELLE
        <p class="pull-right">
            <a href="_yazilar">
                <i class="fa fa-fw fa-chevron-left"></i> Geri
            </a>
        </p>
    </h4>
    
    <form id="frm" method="post">
        <input type="hidden" name="frm" value="icerikgncl" />
         <input type="hidden" name="id" value="<%= yazid.id %>" />
        <div class="checkbox form-group col-md-12">
            <label><input  type="checkbox" value="1" name="onay"/> Onayla</label>
        </div> 
       
        
        <div class="form-group col-md-12">
            Başlık <br>
            <input name="baslik" type="text" required class="form-control" value="<%= yazid.baslik %>" />
        </div>
        
        <div class="form-group col-md-12">
            Giriş <br>
            <textarea class="form-control" id="igiris" name="giris"  ><%= yazid.giris %></textarea>
        </div>
        <div class="form-group col-md-12">
            Metin <br>
            <textarea class="form-control" id="imetin" name="metin"><%= yazid.metin %></textarea>
        </div>
        <div class="form-group col-md-12">
            Tarih <br>
                <div class="input-group">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default btn-tarih"><i class="fa fa-fw fa-calendar"></i></button>
                    </span>
                      <input name="tarih" type="text" required class="form-control tarih" placeholder="<%= yazid.tarih %>" />
              </div>
        </div>
        
        <div class="form-group col-md-12">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
        
    </form>
    
</section>
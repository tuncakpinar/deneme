<%- contentFor('title') %>
Slider

<%- contentFor('body') %>
<section id="icerik" class="buyuk">
	<h4 class="well">SLIDER <p class="pull-right"> <a href="_slider-ekle"><i class="fa fa-fw fa-plus"></i> Yeni Slider</a></p></h4>
    
    <table id="datatable" class="table table-striped table-bordered">
    	<thead>
        	<tr>
            	
            	<th><i class="fa fa-fw fa-picture-o"></i> RESİM</th>
            	
            	
            </tr>
        </thead>
        <tbody>
            <% slider.forEach(function(item){ %>
                <tr>
                    <td >
                         <a class="btn" href="_slider?id=<%= item.id %>" data-toggle="popover" data-placement="bottom" data-title="Açıklama" data-content="<%= item.aciklama %>" data-trigger="hover" ><i class="glyphicon glyphicon-pencil"></i> <b><%= item.baslik %></b></a>
                         <p class="pull-right">
                	
                            <a class="text-info" title="Güncelle" href="_slider-guncelle?id=<%= item.id %>"><i class="fa fa-fw fa-pencil"></i></a>
                            <a class="btn-ajax-confirm text-danger" frm="sliderSil" data-id="<%= item.id %>" title="Sil" style="cursor:pointer;"><i class="fa fa-fw fa-eraser"></i></a>
                            <a class="btn-ajax-confirm text-<%= item.onay ? 'danger' : 'success'%>" frm="sliderOnayla" data-id="<%= item.id %>" title="<%= item.onay ? 'Onay Kaldır' : 'Onayla'%>" style="cursor:pointer;"><i class="fa fa-<%= item.onay ? 'circle-o' : 'check'%>"></i></a>
                        </p>
                        <img src="uploads/<%= item.resim%>" class="img-rounded img-responsive" />
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    
</section>